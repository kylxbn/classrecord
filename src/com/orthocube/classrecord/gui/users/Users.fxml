<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.5" maxHeight="1.7976931348623157E308"
           maxWidth="1.7976931348623157E308" minHeight="500.0" minWidth="500.0" prefHeight="562.0" prefWidth="800.0"
           xmlns="http://javafx.com/javafx/9" fx:controller="com.orthocube.classrecord.gui.users.UsersController">
    <items>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <TitledPane fx:id="ttlUsers" animated="false" collapsible="false" maxHeight="1.7976931348623157E308"
                            maxWidth="1.7976931348623157E308" text="Users" VBox.vgrow="ALWAYS">
                    <content>
                        <ListView fx:id="lstUsers" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                  minHeight="0.0" minWidth="0.0">
                            <contextMenu>
                                <ContextMenu>
                                    <items>
                                        <MenuItem fx:id="mnuRemove" mnemonicParsing="false" onAction="#mnuRemoveAction"
                                                  text="Remove"/>
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </ListView>
                    </content>
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                            <image>
                                <Image url="@../../res/Businessman_16px.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </TitledPane>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="lblUsersTotal" text=" users total."/>
                        <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0"
                              minWidth="1.0" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="cmdAdd" mnemonicParsing="false" onAction="#cmdAddAction" text="Add"/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
        <VBox fx:id="vbxEdit" disable="true" prefHeight="200.0" prefWidth="100.0">
            <children>
                <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox>
                            <children>
                                <TitledPane fx:id="ttlCredentials" animated="false" collapsible="false"
                                            text="User credentials">
                                    <content>
                                        <GridPane hgap="8.0" vgap="4.0">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"
                                                                   minWidth="-Infinity"/>
                                                <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                                                   minWidth="10.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                                                   minWidth="-Infinity"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label fx:id="lblUsername" text="Username:" GridPane.rowIndex="1"/>
                                                <Label fx:id="lblPassword" text="Password:" GridPane.rowIndex="3"/>
                                                <Label fx:id="lblRepeat" text="Repeat:" GridPane.rowIndex="4"/>
                                                <Button fx:id="cmdShow" mnemonicParsing="false" text="Show"
                                                        GridPane.columnIndex="2" GridPane.rowIndex="3">
                                                    <graphic>
                                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                                   smooth="false">
                                                            <image>
                                                                <Image url="@../../res/Eye_16px.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <TextField fx:id="txtUsername" GridPane.columnIndex="1"
                                                           GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                                                <PasswordField fx:id="txtPassword" GridPane.columnIndex="1"
                                                               GridPane.rowIndex="3"/>
                                                <PasswordField fx:id="txtRepeat" GridPane.columnIndex="1"
                                                               GridPane.rowIndex="4"/>
                                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="4.0"
                                                      GridPane.columnSpan="3">
                                                    <children>
                                                        <ImageView fx:id="pboImage" fitHeight="125.0" fitWidth="125.0"
                                                                   pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../../res/Businessman_100px.png"/>
                                                            </image>
                                                        </ImageView>
                                                        <VBox alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308"
                                                              maxWidth="-Infinity" minHeight="-Infinity"
                                                              minWidth="-Infinity" spacing="4.0">
                                                            <children>
                                                                <Button fx:id="cmdReplace" mnemonicParsing="false"
                                                                        onAction="#cmdReplaceAction" text="Replace"
                                                                        VBox.vgrow="SOMETIMES"/>
                                                                <Button fx:id="cmdRemove" mnemonicParsing="false"
                                                                        onAction="#cmdRemovePictureAction"
                                                                        text="Remove"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>
                                                <Label text="Nickname:" GridPane.rowIndex="2"/>
                                                <TextField fx:id="txtNickname" GridPane.columnIndex="1"
                                                           GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@../../res/Key_2_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </TitledPane>
                                <TitledPane fx:id="ttlPermissions" animated="false" collapsible="false"
                                            minHeight="-Infinity" minWidth="-Infinity" text="Permissions">
                                    <content>
                                        <GridPane vgap="4.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                                                   minWidth="-Infinity"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints/>
                                                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <ChoiceBox fx:id="cboAccessLevel" maxHeight="1.7976931348623157E308"
                                                           maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                                                           minWidth="-Infinity"/>
                                                <Label fx:id="lblAccessExplanation" GridPane.rowIndex="2"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@../../res/Approval_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </TitledPane>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER_RIGHT" spacing="8.0">
                    <children>
                        <Button fx:id="cmdCancel" mnemonicParsing="false" onAction="#cmdCancelAction" text="Cancel"/>
                        <Button fx:id="cmdSave" defaultButton="true" mnemonicParsing="false" onAction="#cmdSaveAction"
                                text="Save">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@../../res/Save_16px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </items>
</SplitPane>

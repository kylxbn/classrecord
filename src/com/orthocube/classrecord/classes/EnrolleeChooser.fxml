<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="672.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1"
           fx:controller="com.orthocube.classrecord.classes.EnrolleeChooserController">
    <items>
        <VBox prefHeight="200.0" prefWidth="598.0" spacing="8.0">
            <children>
                <TableView fx:id="tblEnrollees" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           minHeight="100.0" minWidth="100.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="75.0" text="Name"/>
                        <TableColumn fx:id="colCourse" prefWidth="75.0" text="Course"/>
                        <TableColumn fx:id="colNotes" prefWidth="75.0" text="Notes"/>
                    </columns>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="mnuSearchOnFacebook" mnemonicParsing="false"
                                          onAction="#mnuSearchOnFacebookAction" text="Search on Facebook"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="lblNum" text="Label"/>
                        <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                              minWidth="-Infinity" prefHeight="1.0" prefWidth="1.0" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="cmdChoose" defaultButton="true" disable="true" mnemonicParsing="false"
                                onAction="#cmdChooseAction" text="Choose"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </VBox>
    </items>
</SplitPane>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="100.0" minWidth="100.0" prefHeight="686.0" prefWidth="899.0"
            xmlns="http://javafx.com/javafx/9.0.1" fx:controller="com.orthocube.classrecord.MainController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu fx:id="mnuFile" mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="mnuSave" mnemonicParsing="false" text="Save">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Save_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="mnuExit" mnemonicParsing="false" text="Exit">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Exit_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu fx:id="mnuEdit" mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem fx:id="mnuUndo" mnemonicParsing="false" text="Undo">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Undo_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                                <MenuItem fx:id="mnuRedo" mnemonicParsing="false" text="Redo">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Redo_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="mnuDelete" mnemonicParsing="false" text="Delete">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Delete_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <Menu mnemonicParsing="false" text="Theme">
                                    <items>
                                        <RadioMenuItem fx:id="mnuDarkTheme" mnemonicParsing="false"
                                                       onAction="#mnuDarkThemeAction" selected="true" text="Dark">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="mnuTheme"/>
                                            </toggleGroup>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="mnuLightTheme" mnemonicParsing="false"
                                                       onAction="#mnuLightThemeAction" text="Light"
                                                       toggleGroup="$mnuTheme"/>
                                    </items>
                                </Menu>
                            </items>
                        </Menu>
                        <Menu fx:id="mnuTools" mnemonicParsing="false" text="Tools">
                            <items>
                                <MenuItem fx:id="mnuSQL" mnemonicParsing="false" text="SQL Debugger">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Database_Administrator_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu fx:id="mnuHelp" mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem fx:id="mnuAbout" mnemonicParsing="false" onAction="#mnuAboutAction"
                                          text="About">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/About_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </MenuItem>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox alignment="CENTER_LEFT" spacing="16.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" stylesheets="@res/PillButton.css">
                            <children>
                                <Button fx:id="cmdBack" disable="true" maxHeight="1.7976931348623157E308"
                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                        onAction="#cmdBackAction" prefWidth="87.0" styleClass="left-pill" text="Back">
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Back_30px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="cmdNext" contentDisplay="RIGHT" disable="true"
                                        maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                        mnemonicParsing="false" onAction="#cmdNextAction" prefWidth="87.0"
                                        styleClass="right-pill" text="Next">
                                    <graphic>
                                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@res/Forward_30px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <children>
                                <VBox>
                                    <children>
                                        <Label fx:id="lblClassRecord" text="Class Record">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                                            <children>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           smooth="false">
                                                    <image>
                                                        <Image url="@res/Sort_Right_16px.png"/>
                                                    </image>
                                                </ImageView>
                                                <Label fx:id="lblLocation" text="Dashboard">
                                                    <font>
                                                        <Font size="24.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="5.0"
                              prefWidth="5.0" HBox.hgrow="ALWAYS"/>
                        <VBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
                            <children>
                                <Label fx:id="lblDate" text="Date"/>
                                <Label fx:id="lblTime" text="Time"/>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <left>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="150.0">
            <children>
                <GridPane stylesheets="@res/Navigation.css">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                           minWidth="-Infinity"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <ToggleButton fx:id="cmdDashboard" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                      mnemonicParsing="false" styleClass="navigation" text="Dashboard">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@res/Home_40px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                        </ToggleButton>
                        <ToggleButton fx:id="cmdStudents" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                      mnemonicParsing="false" onAction="#cmdStudentsAction" styleClass="navigation"
                                      text="Students" GridPane.rowIndex="1">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@res/Student_Male_40px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                        </ToggleButton>
                        <ToggleButton fx:id="cmdClasses" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                      mnemonicParsing="false" onAction="#cmdClassesAction" styleClass="navigation"
                                      text="Classes" GridPane.rowIndex="2">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@res/Classroom_40px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                        </ToggleButton>
                        <ToggleButton fx:id="cmdUsers" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                      mnemonicParsing="false" onAction="#cmdUsersAction" styleClass="navigation"
                                      text="Users" GridPane.rowIndex="3">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@res/Businessman_40px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                        </ToggleButton>
                        <ToggleButton fx:id="cmdReminders" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                      mnemonicParsing="false" styleClass="navigation" text="Reminders"
                                      GridPane.rowIndex="4">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@res/Notification_40px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                        </ToggleButton>
                    </children>
                </GridPane>
                <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0"
                      minWidth="1.0" VBox.vgrow="ALWAYS"/>
                <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="8.0">
                    <children>
                        <ImageView fx:id="pboUser" fitHeight="125.0" fitWidth="125.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@res/Businessman_100px.png"/>
                            </image>
                        </ImageView>
                        <Label fx:id="lblUser" text="Username">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
    <bottom>
        <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              minHeight="-Infinity" minWidth="-Infinity" spacing="8.0" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                           minWidth="-Infinity" orientation="VERTICAL"/>
                <StackPane>
                    <children>
                        <ProgressBar fx:id="prgMemory" prefWidth="150.0" progress="0.0"/>
                        <Label fx:id="lblMemory" text="MB"/>
                    </children>
                </StackPane>
                <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                           minWidth="-Infinity" orientation="VERTICAL"/>
                <Label fx:id="lblStatus" text="Ready."/>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>

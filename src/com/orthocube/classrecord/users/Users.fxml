<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.5" maxHeight="1.7976931348623157E308"
           maxWidth="1.7976931348623157E308" minHeight="500.0" minWidth="500.0" prefHeight="562.0" prefWidth="800.0"
           stylesheets="@../res/modena_dark.css" xmlns="http://javafx.com/javafx/9.0.1"
           fx:controller="com.orthocube.classrecord.users.UsersController">
    <items>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <TitledPane fx:id="ttlUsers" animated="false" collapsible="false" maxHeight="1.7976931348623157E308"
                            maxWidth="1.7976931348623157E308" text="Users" VBox.vgrow="ALWAYS">
                    <content>
                        <ListView fx:id="lstUsers" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                  minHeight="0.0" minWidth="0.0"/>
                    </content>
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                            <image>
                                <Image url="@../res/Businessman_16px.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </TitledPane>
                <Label fx:id="lblUsersTotal" text=" users total."/>
            </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox>
                            <children>
                                <TitledPane fx:id="ttlCredentials" animated="false" collapsible="false"
                                            text="User credentials">
                                    <content>
                                        <GridPane hgap="8.0" vgap="4.0">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"
                                                                   maxWidth="1.7976931348623157E308"
                                                                   minWidth="-Infinity"/>
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                                                   minWidth="-Infinity"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label fx:id="lblUsername" text="Username:"/>
                                                <Label fx:id="lblPassword" text="Password:" GridPane.rowIndex="1"/>
                                                <Label fx:id="lblRepeat" text="Repeat:" GridPane.rowIndex="2"/>
                                                <Button fx:id="cmdShow" mnemonicParsing="false" text="Show"
                                                        GridPane.columnIndex="2" GridPane.rowIndex="1">
                                                    <graphic>
                                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                                   smooth="false">
                                                            <image>
                                                                <Image url="@../res/Eye_16px.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <TextField fx:id="txtUsername" GridPane.columnIndex="1"
                                                           GridPane.columnSpan="2"/>
                                                <PasswordField fx:id="txtPassword" GridPane.columnIndex="1"
                                                               GridPane.rowIndex="1"/>
                                                <PasswordField fx:id="txtRepeat" GridPane.columnIndex="1"
                                                               GridPane.rowIndex="2"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@../res/Key_2_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </TitledPane>
                                <TitledPane fx:id="ttlPermissions" animated="false" collapsible="false"
                                            minHeight="-Infinity" minWidth="-Infinity" text="Permissions">
                                    <content>
                                        <GridPane vgap="4.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
                                                                   minWidth="-Infinity"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity"
                                                                vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <CheckBox fx:id="chkEditUsers" mnemonicParsing="false"
                                                          text="User editing"/>
                                                <CheckBox fx:id="chkEditData" mnemonicParsing="false"
                                                          text="Data editing" GridPane.rowIndex="1"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                            <image>
                                                <Image url="@../res/Approval_16px.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </TitledPane>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="cmdSave" defaultButton="true" mnemonicParsing="false" text="Save">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" smooth="false">
                                    <image>
                                        <Image url="@../res/Save_16px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </items>
</SplitPane>
